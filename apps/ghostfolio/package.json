{
  "name": "@lukasbriza/ghostfolio",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf build tsconfig.build.tsbuildinfo",
    "build": "nest build",
    "cleanup": "rimraf .eslintcache .turbo tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo build node_modules  --glob",
    "predev": "rimraf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "dev": "dotenv -v NODE_ENV=development -- nest start --debug --watch --inspect-brk=0.0.0.0:9229",
    "docker:build-local": "dotenv -e ./env.local -- docker compose -f docker-compose-local.yaml build",
    "docker:run-local": "dotenv -e ./env.local -- docker compose -f docker-compose-local.yaml up --build -V -d",
    "fix": "run-p ts format:fix lint:fix",
    "format": "prettier --check --ignore-path .prettierignore \"./**/*.{graphql,json,md}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache --ext cjs,js,ts .",
    "lint:fix": "pnpm run lint --fix",
    "start": "NODE_ENV=production node build/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "ts": "tsc --build tsconfig.json"
  },
  "dependencies": {
    "@lukasbriza/eslint-config": "workspace:*",
    "@lukasbriza/ts-config": "workspace:*",
    "@nestjs/axios": "4.0.0",
    "@nestjs/common": "10.3.10",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.3.10",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/platform-express": "10.3.10",
    "@nestjs/swagger": "7.4.0",
    "axios": "1.9.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "csv-parse": "5.6.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "iconv-lite": "0.6.3",
    "puppeteer": "24.8.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "vitest": "2.0.4"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.2",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.3.10",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "4.17.21",
    "@types/multer": "1.4.11",
    "@types/node": "20.14.9",
    "@types/supertest": "6.0.2",
    "dotenv-cli": "8.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "7.0.0",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.3"
  }
}
